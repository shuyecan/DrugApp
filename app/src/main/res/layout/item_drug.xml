<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="80dp">


    <CheckBox
        android:visibility="visible"
        android:id="@+id/check_not_itme"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />



    <ImageView
        android:id="@+id/img_drug"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/check_not_itme"
        android:src="@mipmap/ic_drug1"
        />

    <LinearLayout
        android:layout_toRightOf="@+id/img_drug"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/text_drug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_5"
            android:text="999感冒药"
            android:textColor="@color/title_black" />


        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="￥" />
            <TextView
                android:id="@+id/text_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="15.8" />
        </LinearLayout>

    </LinearLayout>

    <com.drugapp.View.CicleAddAndSubView
        android:id="@+id/cicle_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:padding="10dp">

    </com.drugapp.View.CicleAddAndSubView>

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="0.1dp">

    </View>
</RelativeLayout>